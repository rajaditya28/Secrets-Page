<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <%usersWithSecrets.forEach(function(user){%>
      <%user.secret.forEach(function(sec){%>
        <p class="secret-text"><%=sec%></p>
        <%})%>
    <%})%>
    
    <hr>
    <a class="btn btn-light btn-lg" href="/register" role="button">Register to add<br>your secrets</a>
    <a class="btn btn-dark btn-lg" href="/login" role="button">Already registered?<br>Login</a>
  </div>
</div>

<%- include('partials/footer') %>